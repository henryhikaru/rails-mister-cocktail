<div class="container">
	<h1><%= @cocktail.name %></h1>
	<div class="card">
		<%= link_to 'back', cocktails_path %>
		<ul>
			<% if @cocktail.doses.any? %>
				<% @cocktail.doses.each do |dose| %>
					<li><%= dose.ingredient.name %></li>
					<li><%= dose.description %></li>
					<%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			<% end %>
		</ul>
		<%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>
		
	</div>
</div>